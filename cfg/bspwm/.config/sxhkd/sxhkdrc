# program launcher
super + d
	rofi -show drun

# quit bspwm normally
ctrl + alt + Delete
	bspc quit

# close and kill
alt + {_,shift + }F4
	bspc node -{c,k}

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set window fullscreen
alt + Return
	bspc node -t ~fullscreen

# set window floating
alt + space
	bspc node -t ~floating

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node
alt + {_,shift + }Tab
	bspc node -f {next,prev}

# focus the next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}

# focus or send to the given desktop
super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} '^{1-9}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p ~{west,south,north,east}

# preselect the direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p ~{west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

#
# gaps
#

super + {equal,minus}
	bspc config window_gap $((`bspc config window_gap`{+,-}10))

super + shift + equal
	bspc config left_padding   $((`bspc config left_padding`  +10)) ;\
	bspc config bottom_padding $((`bspc config bottom_padding`+10)) ;\
	bspc config top_padding    $((`bspc config top_padding`   +10)) ;\
	bspc config right_padding  $((`bspc config right_padding` +10))

super + shift + minus
	bspc config left_padding   $((`bspc config left_padding`  -10)) ;\
	bspc config bottom_padding $((`bspc config bottom_padding`-10)) ;\
	bspc config top_padding    $((`bspc config top_padding`   -10)) ;\
	bspc config right_padding  $((`bspc config right_padding` -10))

super + 0
	bspc config window_gap 0

super + shift + 0
	bspc config left_padding   0  ;\
	bspc config bottom_padding 0  ;\
	bspc config top_padding    30 ;\
	bspc config right_padding  0

#
# audio
#

XF86AudioMute
	amixer set Master toggle

XF86AudioRaiseVolume
	amixer set Master 2.5%+,5%+

XF86AudioLowerVolume
	amixer set Master 2.5%-,5%-
